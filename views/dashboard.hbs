<h6>Dashboard</h6>
<h3>Welcome {{name}} </h3>
<p>Here are you stories</p>

{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <td>Title</td>
        <td>Date</td>
        <td>Status</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt "MMMM Do YYYY hh:mm:ss a"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p> You have not created any stories</p>
{{/if}}